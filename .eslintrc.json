{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "next", "prettier", "next/core-web-vitals"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "off",
    "no-console": "warn",
    "no-unused-vars": "off",
    "no-useless-escape": "off"
  },
  "overrides": [
    {
      "files": ["smart-contracts/**/*"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "globals": {
    "JSX": true
  }
}
